mixin expert(photo, text)
	.expert
		.expert__wrap-img
			picture
				source(media="(max-width: 480px)", srcset="img/" + photo + "-mob.jpg")
				source(srcset='/img/' + photo + '@2x.jpg 2x, /img/' + photo + '.webp 1x')
				img(src="img/" + photo + ".jpg", alt="photo")
		p.expert__text.title.title--very-small!= text
			i.fico.fico-mark