include products-menu.pug

- var SUBMENU = LANG.submenu;

-
	const productsInfo = [
		{
			link: 'product-immunal.html',
			img: 'img/product_1.png',
			stars: 'img/svg/raiting_review_1.svg'

		},
		{
			link: 'product-multivitamin.html',
			img: 'img/product_2.png',
			stars: 'img/svg/raiting_review_1.svg'
		},
		{
			link: 'product-antistress.html',
			img: 'img/product_3.png',
			stars: 'img/svg/raiting_review_0.svg'
		}
	];

.products-menu__container.container
	h2.products-menu__title.title.title--very-small!= SUBMENU.title
	.products-menu__list
		each product_item, key in SUBMENU.productItemArray
			+product_item(productsInfo[key].link, product_item.isNotActive, productsInfo[key].img, product_item.product, product_item.descr, productsInfo[key].stars, product_item.price, product_item.text)
